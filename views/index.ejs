<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Blog Practice App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel='stylesheet' href='./styles.css' type='text/css'/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <%- include('./partials/header') -%>
    <div class='row'>
      <div class='col'>
        <h1 class='content-header'>Blogs</h1>
      </div>
      <div class='col'>
        <button type='button' class='btn btn-dark btn-lg float-right'>
          <a href='/new'>Add Blog</button></a>
      </div>
    </div>
    <div class="blog-container">
      <% for (let i = 0; i < posts.length; i++) { %>
        <div class='blog'>
          <h3 class='general' id=`${posts[i].title}`><%= posts[i].title %></h3>
          <hr />
          <p class='blog-content'>
          <% let path = "posts/" + i; %>
          <%  if (posts[i].content.length > 100){ %>
              <%= posts[i].content + "..."  %> <a href=<%= path %>>Read more</a>
          <%  } else { %>
              <%= posts[i].content %>
          <%  } %>
          </p>
        </div>
      <% } %>
    </div>
    <%- include('./partials/footer') -%>
  </body>
</html>
